<section class="page-hero layout layout--full-width layout-padding--none"  style="background-image:url('{{ image.url }}');">
  {% if image %}<div class="global__overlay"></div>{% endif %}
  <div class="container">
      <div class="page-hero__content">
          {% if title %}
              <h1 class="page-hero__title invisible" data-appear-effect="slideInLeft" data-appear-delay="150">
                  {{ title }}
              </h1>
          {% endif %}
          {% if hero_date %}
              <span class="page-hero__date invisible" data-appear-effect="slideInLeft" data-appear-delay="150">{{ hero_date }}</span>
          {% endif %}
      </div>
  </div>
</section>
