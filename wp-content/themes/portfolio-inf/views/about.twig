<section id="about" class="layout layout--wide layout--about layout-padding--extra-large">
  <div class="about__container">
      <div class="about__content">
          {% if about_top_title and about_title %}
              <h4 class="global__top-title invisible" data-appear-effect="slideInLeft" data-appear-delay="150">{{ about_top_title }}</h4><br>
              <h3 class="global__title invisible" data-appear-effect="slideInLeft" data-appear-delay="190">{{ about_title }}</h3>
          {% endif %}
          <div class="about__about-me clearfix">
              <figure class="about__image-container invisible" data-appear-effect="slideInLeft" data-appear-delay="250">
                <img src="{{ image.url }}" width="{{ image.width }}" height="{{ image.height }}" alt="{{ about_title }}">
              </figure>
              <ul class="about__list invisible" data-appear-effect="slideInRight" data-appear-delay="250">
                  <li class="about__list-item"><span class="about__list-item--title">{{ labels.label_about_date }}</span><span class="about__list-item--value">{{ date_of_birth }}</span></li>
                  <li class="about__list-item"><span class="about__list-item--title">{{ labels.label_about_language }}</span><span class="about__list-item--value">{{ language }}</span></li>
                  <li class="about__list-item"><span class="about__list-item--title">{{ labels.label_about_city }}</span><span class="about__list-item--value">{{ country_and_city }}</span></li>
                  <li class="about__list-item"><span class="about__list-item--title">{{ labels.label_about_expert }}</span><span class="about__list-item--value">{{ expert_in }}</span></li>
                  <li class="about__list-item"><span class="about__list-item--title">{{ labels.label_about_phone }}</span><span class="about__list-item--value"><a href="tel:{{ phone | replace({' ': ''}) }}">{{ phone }}</a></span></li>
                  <li class="about__list-item"><span class="about__list-item--title">{{ labels.label_about_email }}</span><span class="about__list-item--value"><a href="mailto:{{ email }}" target="_blank">{{ email }}</a></span></li>
                  <li class="about__list-item"><span class="about__list-item--title">{{ labels.label_about_availability }}</span><span class="about__list-item--value"><a href="javascript:void(0)" data-info="{% if available == 'false'  %}{{ not_available_explanation }}{% endif %}" target="_blank">{% if available == 'true' %}Available {% else %}Not Available{% endif %}</a></span></li>
              </ul>

          </div>
      </div>
  </div>
</section>